vbell off
caption always "%{=u .M}%-w%<%{=ub C}%n %t%{=u .M}%+w%-09="   
hardstatus alwayslastline "%{ kk}%{g}%e"
#hardstatus alwayslastline "%{ kk}%{g}%e%<%=%{Y} %D%c:%s %a%{R} %M %d/%m/%Y %=[%{G}@%H %{M}Load: %l %{w}%{R}]"
# For Freebsd
bindkey \033[D prev
bindkey \033[C next
# For Ubuntu
bindkey "^[[1;5A" prev
bindkey "^[[1;5B" next

startup_message off
altscreen on
defencoding utf8
bind b encoding big5 utf8
bind u encoding utf8 utf8
