# System-wide .cshrc file for csh(1).


#setenv PAGER 'less -r'

if ($?prompt) then

set nobeep
set autolist
set notify
set color

alias l 'ls'
alias c 'clear'
alias h 'cd ~'
alias nba 'ssh j129008@bsd1.nba.nctu.edu.tw'
alias Vghost 'ssh -p 21036 140.113.88.175'
alias bsd 'ssh yichang@bsd1.cs.nctu.edu.tw'
alias cd 'cd \!:1 ; ls'
alias mcdir 'mkdir \!:1 ; cd \!:1'
alias Vghost 'ssh -p 21036 140.113.88.175'
alias VghostFtp 'sftp -P 21036 j129008@140.113.88.175'
alias bsd1 'ssh yichang@bsd1.cs.nctu.edu.tw'
alias bsd2 'ssh yichang@bsd2.cs.nctu.edu.tw'                                                
alias bsd3 'ssh yichang@bsd3.cs.nctu.edu.tw'
alias myCom 'sftp j129008@140.113.252.4'
alias gcc 'gcc -Wall '
alias g++ 'g++ -Wall '
alias top 'htop'
alias grep 'grep --color="auto"'
alias ttar  'tar -cvf'
alias utar  'tar -xvf'
alias ll 'ls -al'


setenv LS_COLORS ':no=00:fi=00:di=01;36:ln=01;36:pi=40;33:so=01;35:bd=40;33;01:cd=40;33;01:ex=01;32:*.cmd=01;32:*.exe=01;32:*.com=01;32:*.btm=01;32:*.bat=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.jpg=01;35:*.gif=01;35:*.bmp=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.c=01;33:*.cpp=01;33:*.MP3=01;44;37:*.mp3=01;44;37:*.pl=01;33:';
setenv LC_CTYPE UTF-8
setenv LANG UTF-8
setenv LC_ALL en_US.UTF-8
setenv CLICOLOR
setenv  EDITOR  vim

complete man 'p/1/c/'
complete cd 'C/*/d/'
set hostlist=(j129008 yichang)
complete ssh 'p/1/$hostlist/' 'p/2/c/'

set colorcat
set autoexpand
set autocorrect
set correct=cmd
set rmstar
set filec
set history = 1000
set savehist = 1000
set noclobber
set autolist
set nobeep

  if(! $?WINDOW ) then
    set prompt="%{^[[1;36m%}%T%{^[[m%} %{^[[1;33m%}%n%{^[[m%}@%{^[[1;37m%}%m %{^[[1;32m%}[%~]%{^[[m%} >"
  else
    set prompt="%{^[[1;36m%}%t%{^[[m%} %{^[[1;33m%}%n%{^[[m%}@%{^[[1;37m%}%m %{^[[1;32m%}[%~]%{^[[m%} %{^[[1;35m%}[W$WINDOW]%{^[[m%} >"
  endif
  if ($?tcsh) then
    set mail = (/var/mail/$USER)
    bindkey "^W" backward-delete-word
    bindkey -k up history-search-backward
    bindkey -k down history-search-forward
  endif
endif

